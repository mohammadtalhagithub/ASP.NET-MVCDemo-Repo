<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Portfolio, MVC</title>
    @Styles.Render("~/Content/css")

    @Styles.Render("~/Content/CustomCSS.css")
    @* OR *@
    <link href="~/Content/CustomCSS.css" rel="stylesheet" />


    @Scripts.Render("~/bundles/modernizr")



    <style>
        footer {
            background-color: #3C354D;
            margin: 0px;
            color: #cbcbcb;
            font-size: 2rem;
            text-align: center;
            padding: 10px 0px 10px 0px;
        }
    </style>
</head>
<body>
    @* Navbar Starts *@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Portfolio App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Education", "Education", "Home")</li>
                    <li>@Html.ActionLink("Partial Views", "PartialViews", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "StronglyTypedPartialView")</li>
                </ul>
            </div>
        </div>
    </div>
    @* Navbar Ends *@

    @*<div class="container body-content">*@
    <div style="margin: 0px 30px 0px 30px;" class="">
                                                      @* -------------------------------------------- *@
        @RenderBody() 
        <hr />
    </div>
    <footer style="">
        <p>&copy; @DateTime.Now.Year - Mohammad Talha (Developed using ASP.NET MVC).</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
